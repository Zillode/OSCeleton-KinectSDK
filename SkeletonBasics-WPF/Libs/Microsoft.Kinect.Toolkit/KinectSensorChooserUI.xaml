            <Setter Property="Template" Value="{DynamicResource RefreshButtonTemplate}"/>
            <Setter Property="FontSize" Value="10.667"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
