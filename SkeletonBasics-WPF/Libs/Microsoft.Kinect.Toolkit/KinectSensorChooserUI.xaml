                    		</DoubleAnimationUsingKeyFrames>
                    	</Storyboard>
                    </VisualTransition>
                    <VisualTransition From="NoAvailableSensors" GeneratedDuration="0">
                    	<Storyboard>
                    		<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="expandedNoAvailableSensorsContent">
                    			<EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
                    		</DoubleAnimationUsingKeyFrames>
                    		<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="expandedNoAvailableSensorsContent">
                    			<DiscreteObjectKeyFrame KeyTime="0:0:0.2" Value="{x:Static Visibility.Hidden}"/>
